{{#userVist}}
<section class="profile-section py-5" id="about">
    <div class="container-fluid">
        <!-- Card principal -->
        <div class="card custom-card">
            <!-- Información de perfil -->
            <div class="card-body text-center position-relative">
                <!-- Imagen de perfil y nombre -->
                <div class="profile-info">
                    <img src=".{{fotoPerfil}}" class="rounded-circle profile-img shadow-sm" alt="Profile Image">
                  
                </div>
                 <div class="username-display">{{usuario}}</div>
                <div class="row about-list mt-4">
    <div class="col-md-4 date">
        <div class="d-flex flex-column align-items-start">
            <p><strong>Nombre:</strong> {{nombre}}</p>
            <p><strong>Edad:</strong> 22</p>
             <p><strong>Email:</strong> {{email}}</p>
            <p><strong>País:</strong> {{pais}}</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="d-flex flex-column align-items-start">
            <p><strong>Apellido:</strong> {{apellido}}</p>
            <p><strong>Teléfono:</strong> 820-885-3321</p>
            <p><strong>Género:</strong> {{genero}}</p>
            <p><strong>Ciudad:</strong> {{ciudad}}</p>

        </div>
    </div>
    <div class="col-md-3">
        <div class="d-flex flex-column align-items-start mb-2">
            <img src="../public/image/QRUsers/{{id}}.png" alt="{{usuario}}" style="width: 200px; height: 180px">
        </div>
    </div>
</div>

            </div>
            <!-- Contador de estadísticas -->
            <div class="card-footer bg-light text-center">
                <div class="row">
                    <div class="col-6 col-lg-3">
                        <div class="count-data">
                            <h6 class="count h2 text-dark">{{puntaje}}</h6>
                            <p class="m-0 font-weight-bold">Puntaje total</p>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="count-data">
                            <h6 class="count h2 text-dark">{{partidas}}</h6>
                            <p class="m-0 font-weight-bold">Partidas jugadas</p>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="count-data">
                            <h6 class="count h2 text-dark">{{cantidadSugeridas}}</h6>
                            <p class="m-0 font-weight-bold">Preguntas sugeridas</p>
                        </div>
                    </div>
                    <div class="col-6 col-lg-3">
                        <div class="count-data">
                            <h6 class="count h2 text-dark">{{edadQuiz}} d</h6>
                            <p class="m-0 font-weight-bold">Edad QuizGame</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{{/userVist}}
